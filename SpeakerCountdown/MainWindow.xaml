<Window x:Name="winContent" x:Class="SpeakerCountdown.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpeakerCountdown"
        mc:Ignorable="d"
        Title="MainWindow" Height="100" Width="200" Topmost="True" Background="{DynamicResource {x:Static SystemColors.MenuHighlightBrushKey}}" Foreground="White" ResizeMode="NoResize" MouseLeftButtonDown="winContent_MouseLeftButtonDown">
    <TextBlock x:Name="txt" HorizontalAlignment="Center" Margin="0,0,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Center" FontSize="43" />
    <Window.ContextMenu>
        <ContextMenu>
            <MenuItem Name="setting" Header="设置" Click="Setting_Click"/>
            <MenuItem Name="exit" Header="退出" Click="Exit_Click"/>
        </ContextMenu>
    </Window.ContextMenu>
</Window>
